{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators":true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": false, // not ready to implement this
    "noImplicitAny": false, // not ready to implement this
    "noImplicitThis": false,
    "alwaysStrict": false,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,  // not ready to implement this
    "strictPropertyInitialization": false, // not ready to implement this
    "target": "es2015",
    "types": ["reflect-metadata", "node"]
  },
  "exclude": [
    "node_modules"
  ]
}
